{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_author}"
  ],
  "contact": {
    "homepage": "${mod_url}",
    "sources": "${mod_url}",
    "issues": "${mod_issue_tracker}"
  },
  "license": "${mod_license}",
  "icon": "logo.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "de.cech12.brickfurnace.BrickFurnaceMod"
    ],
    "modmenu": [
      "de.cech12.brickfurnace.compat.ModMenuCompat"
    ],
    "jei_mod_plugin": [
      "de.cech12.brickfurnace.jei.BrickFurnaceJEIPlugin"
    ],
    "rei_client": [
      "de.cech12.brickfurnace.rei.BrickFurnaceReiClientPlugin"
    ]
  },
  "mixins": [
    "${mod_id}.mixins.json"
  ],
  "depends": {
    "java": ">=17",
    "minecraft": ">=${minecraft_version}",
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_version}",
    "cloth-config": ">=${cloth_config_version}"
  },
  "recommends": {
    "modmenu": ">=${mod_menu_version}",
    "jei": ">=${jei_version}",
    "roughlyenoughitems": ">=${rei_version}"
  }
}
